
log_settings {
	directory = "/var/log/kaohi"
	level = 1
}

listen_address = "127.0.0.1:8443"

configs "cfg-group1" {
	files = [
		"/var/log/system.log"
		"/var/log/fail.log"
	]
}

configs "cfg-group2" {
	files = [
		"/var/log/openvpn.log"
	]
}

commands "cmd-group1" {
	uid = 501
	interval = 10
	cmds = [
		"/bin/ls -l /"
		"tcpdump -i eth0"
	]
}

commands "cmd-group2" {
	interval = 5
	cmds = [
		"nslookup www.google.com"
	]
}

rsyslog {
	listen = "*.5080"
	protocol = "tcp"
}
